<form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Nombre</label>
            <input type="hidden" name="" id="" value="">
            <input type="text" name="name" id="" value="" placeholder="Pedro Salinas">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" id="" value="" placeholder="pedrosalinas@mail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">GÃ©nero</label>
            <div class="radio inline">
                <input type="radio" name="gender" id="genderM" value="Masculino">
                <label for="genderM" class="radio-label">Masculino</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="gender" id="genderF" value="Femenino">
                <label for="genderF" class="radio-label">Femenino</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="gender" id="genderX" value="NoEspecifica">
                <label for="genderX" class="radio-label">No Especifica</label>
            </div>
        </div>
        <div class="form-group">
            <label for="estado" class="text-light">Estado</label>
            <div class="radio inline">
                <input type="radio" name="estado" id="active" value="Activo">
                <label for="active" class="radio-label">Activo</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="estado" id="inactive" value="Inactivo">
                <label for="inactive" class="radio-label">Inactivo</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Enviar Formulario</button>
        </div>
    </div>
</form>

